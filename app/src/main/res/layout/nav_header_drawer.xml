<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/profile_backdrop_gradient"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_account_header_current"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_placeholder"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:id="@+id/drawer_account_header_text_section"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="56dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/drawer_account_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif-medium"
                android:lines="1"
                android:maxLines="1"
                android:text="Avery Ware"
                android:textSize="14sp"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/drawer_account_header_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:maxLines="1"
                android:text="randowm@gmail.com"
                android:textSize="14sp"
                tools:text="@tools:sample/us_phones" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

