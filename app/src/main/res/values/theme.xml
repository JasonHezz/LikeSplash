<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!--fixme https://issuetracker.google.com/issues/112714499-->
        <item name="actionBarSize">@dimen/mtrl_toolbar_default_height</item>
    </style>

    <style name="Theme.Splash.Translucent">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Splash.Main">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@style/FadeWindowAnimationTransition</item>
    </style>

    <style name="Theme.Splash.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.Splash.Profile">
        <item name="android:windowSharedElementEnterTransition">
            @transition/avatar_shared_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/avatar_shared_return
        </item>
        <item name="android:windowEnterTransition">@transition/profile_enter</item>
        <item name="android:windowReturnTransition">@transition/profile_return</item>
    </style>

</resources>